            android:backgroundTint="@color/app_color"
            android:layout_margin="@dimen/_3sdp"
            android:background="@drawable/ic_triangle_right">
        </View>

        <View
            android:id="@+id/view3"
            android:layout_width="@dimen/_7sdp"
